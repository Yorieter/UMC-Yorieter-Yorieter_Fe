<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/ic_yorieter_background">

    <!-- 툴바 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/layout_post_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ic_yorieter_background"
        app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="레시피 작성"
        android:textColor="@color/subColor5"
        android:textStyle="bold"
        android:textSize="23sp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"/>
    </androidx.appcompat.widget.Toolbar>

    <!-- post 작성부분 시작 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_post_top">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/ic_yorieter_background"
                app:layout_constraintGuide_percent="0.05" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/ic_yorieter_background"
                app:layout_constraintGuide_percent="0.95" />

            <EditText
                android:id="@+id/post_name"
                android:layout_width="330dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/text_round"
                android:hint=" 제목:(15자 이내)"
                android:inputType="text"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="@id/guideline2"
                app:layout_constraintStart_toStartOf="@id/guideline1"
                app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/post_ingredient"
                    android:layout_width="330dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/text_round"
                    android:hint=" 식재료를 입력하세요:"
                    android:inputType="text"
                    android:textSize="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/post_name"
                    app:layout_constraintStart_toStartOf="@id/guideline1"
                    app:layout_constraintEnd_toEndOf="@id/guideline2"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"/>

                <EditText
                    android:id="@+id/post_detail"
                    android:layout_width="330dp"
                    android:layout_height="230dp"
                    android:layout_marginTop="10dp"
                    android:hint=" 게시글을 입력하세요:"
                    android:textSize="15dp"
                    android:inputType="text"
                    android:background="@drawable/text_round"
                    app:layout_constraintStart_toStartOf="@id/guideline1"
                    app:layout_constraintEnd_toEndOf="@id/guideline2"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/post_ingredient" />

                <LinearLayout
                    android:id="@+id/layout_calory"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:layout_constraintTop_toBottomOf="@+id/post_detail"
                    app:layout_constraintStart_toStartOf="parent" >

                    <!-- 사진 수정해야함-->
                    <ImageButton
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/recipe"
                        android:layout_marginTop="18dp"
                        android:layout_marginStart="30dp"
                        />

                    <EditText
                        android:id="@+id/find_food"
                        android:layout_width="80dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="15dp"
                        android:hint=" 식재료:"
                        android:textSize="12dp"
                        android:background="@drawable/text_round"/>

                    <EditText
                        android:id="@+id/find_calory"
                        android:layout_width="80dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/text_round"
                        android:hint=" 칼로리(Kcal)"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="35dp"
                        android:layout_height="20dp"
                        android:text="그람 당(g)"
                        android:textSize="8dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="5dp" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:text="칼로리 검색"
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:layout_marginTop="13dp"
                        android:layout_marginStart="28dp"/>

                    <!-- 사진 수정해야함-->
                    <ImageButton
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/recipe"
                        android:layout_marginTop="15dp"
                        />

                </LinearLayout>

            <!-- 레시피재료 추가 시 chip형태로 chipGroup에 저장됨 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout_chip"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="@id/guideline2"
                app:layout_constraintStart_toStartOf="@id/guideline1"
                app:layout_constraintTop_toBottomOf="@+id/layout_calory">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/post_ingredients_chip_group"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></com.google.android.material.chip.ChipGroup>

            </androidx.constraintlayout.widget.ConstraintLayout>

                <android.widget.Button
                    android:id="@+id/add_img_btn"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/button_round"
                    android:backgroundTint="@color/gray"
                    android:text="이미지 첨부"
                    android:textColor="@color/subColor5"
                    app:layout_constraintStart_toStartOf="@id/guideline1"
                    app:layout_constraintEnd_toEndOf="@id/guideline2"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout_chip" />

                <android.widget.Button
                    android:id="@+id/add_post_btn"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/button_round"
                    android:text="업로드"
                    app:layout_constraintEnd_toEndOf="@id/guideline2"
                    app:layout_constraintTop_toBottomOf="@+id/add_img_btn" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>