<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<!--    <androidx.constraintlayout.widget.ConstraintLayout-->
<!--        android:id="@+id/item_mybookmark"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintEnd_toEndOf="parent">-->

        <ImageView
            android:id="@+id/item_mybookmark_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mypage_bookmark_image1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/item_mybookmark_title_tv"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:text="여름에 무조건 먹어야 하는 냉면"
            android:textSize="10sp"
            android:textColor="@color/subColor5"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/mypage_mybookmark_background"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/item_mybookmark_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/bookmark_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/mypage_ic_bookmark"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_mybookmark_iv"
            android:onClick="onClick"/>

</androidx.constraintlayout.widget.ConstraintLayout>